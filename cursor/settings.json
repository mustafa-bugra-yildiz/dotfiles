{
    // typography
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "editor.fontFamily": "Agave",
    "editor.unicodeHighlight.includeStrings": false,
    "terminal.integrated.fontFamily": "Agave",
    "workbench.fontAliasing": "antialiased",

    // auto formatting
    "json.format.keepLines": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "editor.formatOnSave": true,
    "files.insertFinalNewline": true,
    "editor.rulers": [
        80
    ],

    // version control
    "git.confirmSync": false,
    "git.autofetch": true,

    // project manager
    "projectManager.git.baseFolders": [
        "~/Desktop/personal",
        "~/Desktop/work"
    ],

    // extensions
    "extensions.ignoreRecommendations": true,

    // ai
    "cursor.cpp.disabledLanguages": [
        "plaintext"
    ],

    // layout
    "workbench.sideBar.location": "right",
    "workbench.activityBar.location": "top",
    "editor.stickyScroll.enabled": false,
    "breadcrumbs.enabled": false,
    "editor.lightbulb.enabled": "off",
    "workbench.tree.enableStickyScroll": false,
    "workbench.layoutControl.enabled": false,

    // theme
    "window.autoDetectColorScheme": true,
    "workbench.preferredLightColorTheme": "Default Light Modern",
    "workbench.preferredDarkColorTheme": "Cursor Dark",
    "editor.semanticHighlighting.enabled": true,
    "workbench.colorCustomizations": {
        "[Cursor Dark]": {
            "statusBar.background": "#242424",
            "panel.background": "#242424",
            "editor.background": "#242424",
            "editorGutter.background": "#242424",
            "tab.inactiveBackground": "#242424",
            "tab.activeBackground": "#333",
            "titleBar.activeBackground": "#242424",
            "titleBar.inactiveBackground": "#222",
            "terminal.background": "#242424",
            "sideBar.background": "#242424",
            "sideBarSectionHeader.background": "#242424",
            "editorGroupHeader.tabsBackground": "#242424",
            "commandCenter.background": "#242424",
            "editorGroup.emptyBackground": "#242424"
        }
    },

    // file tree
    "workbench.tree.indent": 15,
    "workbench.tree.renderIndentGuides": "none",

    // editor
    "editor.guides.indentation": false,
    "editor.renderLineHighlight": "none",
    "editor.smoothScrolling": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "solid",
    "editor.lineNumbers": "on",
}
